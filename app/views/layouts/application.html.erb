<% url = request.fullpath.split('/') %>
<% url2 = request.fullpath.split('?') %>
<%#= url2[0] %>
<!DOCTYPE html>
<html class="yep<% if request.fullpath == '/' %> home<% end %>">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=Edge;chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title><% if @content %><%= @content.title %><% else %>Contentboard | Mock up your content like it's going to be, without the hassle.<% end %></title>
	<link href='http://fonts.googleapis.com/css?family=Inconsolata:400,700' rel='stylesheet' type='text/css' />
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= csrf_meta_tags %>
</head>
<body class="yep<% if url2[0] == '/' %> hm<% end %>">
	<%= yield %>
	<% if url[3] == 'edit' || url[2] == 'new' %>
	<%= javascript_include_tag "application" %>
	<%= javascript_include_tag "contents" %>
	<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
	<script type="text/javascript">
		tinymce.init(
			{
				selector:'textarea',
				height : 300,
				plugins: ['link'],
				toolbar: 'undo redo | styleselect | bold italic | link | bullist numlist | hr | blockquote code',
				menubar : false
			}
		);
		<% if @content.layout_type == true %>
		$('#two-column').parent().addClass('checked');
		<% elsif @content.layout_type == false %>
		$('#single-column').parent().addClass('checked');
		<% else %>
		$('#single-column').parent().addClass('checked');
		<% end %>
	</script>
	<% else %>
	<%= javascript_include_tag "contents" %>
	<% end %>
</body>
</html>
